    <div class="col-9 main-col">

        <div id="page-top" class="col-12 shadow" style="min-height:62px;">
            <div class="col-2 offset-10 border-left btn-group inline-block text-right mt-2">
                  <button type="button" class="btn btn-default dropdown-toggle user-button" data-toggle="dropdown">
